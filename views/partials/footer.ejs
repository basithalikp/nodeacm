    <footer class="site-footer">
        <div class="footer-content">
            <div class="footer-links">
                <% navLinks.forEach(link => { %>
                    <a href="<%= link.href %>"><%= link.name %></a>
                <% }) %>
            </div>
            <div class="footer-socials">
                <a href="<%= socialLinks.email %>" aria-label="Email"><i class="fas fa-envelope"></i></a>
                <a href="<%= socialLinks.instagram %>" target="_blank" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
                <a href="<%= socialLinks.linkedin %>" target="_blank" aria-label="LinkedIn"><i class="fab fa-linkedin"></i></a>
                <a href="<%= socialLinks.github %>" target="_blank" aria-label="GitHub"><i class="fab fa-github"></i></a>
            </div>
            <div class="footer-contact">
                <p>For website issues, contact the <a href="mailto:<%= siteConfig.webAdminEmail %>">Web Administrator</a>.</p>
            </div>
            <div class="footer-copyright">
                <p>&copy; <%= siteConfig.year %> <%= siteConfig.name %>. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script src="/js/main.js"></script>
</body>
</html>
