    <footer class="site-footer" role="contentinfo">
        <div class="footer-content">
            <nav class="footer-links" aria-label="Footer navigation">
                <% navLinks.forEach(link => { %>
                    <a href="<%= link.href %>"><%= link.name %></a>
                <% }) %>
            </nav>
            <div class="footer-socials" role="list" aria-label="Social media links">
                <a href="<%= socialLinks.email %>" aria-label="Send us an email" role="listitem"><i class="fas fa-envelope" aria-hidden="true"></i></a>
                <a href="<%= socialLinks.instagram %>" target="_blank" rel="noopener noreferrer" aria-label="Follow us on Instagram" role="listitem"><i class="fab fa-instagram" aria-hidden="true"></i></a>
                <a href="<%= socialLinks.linkedin %>" target="_blank" rel="noopener noreferrer" aria-label="Connect on LinkedIn" role="listitem"><i class="fab fa-linkedin" aria-hidden="true"></i></a>
                <a href="<%= socialLinks.github %>" target="_blank" rel="noopener noreferrer" aria-label="View our GitHub" role="listitem"><i class="fab fa-github" aria-hidden="true"></i></a>
            </div>
            <div class="footer-contact">
                <p>For website issues, contact the <a href="mailto:<%= siteConfig.webAdminEmail %>">Web Administrator</a>.</p>
            </div>
            <div class="footer-copyright">
                <p>&copy; <%= siteConfig.year %> <%= siteConfig.name %>. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script src="/js/main.js"></script>
</body>
</html>
