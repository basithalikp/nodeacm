<%- include('partials/header') %>

    <main class="content-wrapper">
        <section class="hero-section">
            <h1 class="main-heading">NSS College of Engineering<br><span class="gradient-text">ACM Student Chapter</span></h1>
            <p class="sub-heading" style="font-family: var(--font-heading); font-size: 1.2rem;">NSSCE's premier organization for Computer Science and Information Technology.</p>
        </section>

        <section class="intro-section liquid-glass">
            <h2><%= siteConfig.intro.heading %></h2>
            <p><%= siteConfig.intro.text %></p>
        </section>

        <section class="home-deck-section">
            <div class="deck-header">
                <h2><a href="/events">Upcoming Events</a></h2>
                <a href="/events" class="btn-gradient">More Events <i class="fas fa-arrow-right"></i></a>
            </div>
            <div class="card-deck-container liquid-glass">
                <div class="card-deck horizontal-scroll">
                    <% featuredEvents.forEach(event => { %>
                        <%- include('partials/event-card', { event: event }) %>
                    <% }) %>
                </div>
            </div>
        </section>

        <section class="home-deck-section">
            <div class="deck-header">
                <h2><a href="/team">Meet The Team</a></h2>
                <a href="/team" class="btn-gradient">More Members <i class="fas fa-arrow-right"></i></a>
            </div>
            <div class="card-deck-container liquid-glass">
                <div class="card-deck horizontal-scroll">
                    <% featuredTeam.forEach(member => { %>
                        <%- include('partials/team-card', { member: member }) %>
                    <% }) %>
                </div>
            </div>
        </section>

        <section class="join-us-section">
            <h2>Why Join Us?</h2>
            <div class="benefits-container">
                <ul>
                    <% benefits.forEach(benefit => { %>
                        <li><i class="fas fa-check-circle"></i> <%= benefit %></li>
                    <% }) %>
                </ul>
                <a href="/about" class="btn-gradient">Learn More & Join</a>
            </div>
        </section>
    </main>

<%- include('partials/footer') %>
